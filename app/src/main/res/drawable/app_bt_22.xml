<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle"
            android:antialias="true">
            <solid android:color="#ff4d8bfc" />
            <corners android:radius="22dp"/>
            <gradient
                android:startColor="#ff4d8bfc"
                android:endColor="#ff5dabfc"
                android:angle="0" />

        </shape>

    </item>

    <item >
        <shape android:shape="rectangle"
            android:antialias="true">
            <solid android:color="@color/app_main" />
            <corners android:radius="22dp"/>
            <gradient
                android:startColor="#ff225bff"
                android:endColor="#ff4d8bfc"
                android:angle="0" />
        </shape>
    </item>
</selector>