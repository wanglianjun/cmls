<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="line">

    <!--线宽为dashWith，线之间空隙dashGap，dashGap=0dp时，是实线 -->
    <stroke
        android:width="0.6dp"
        android:color="#ddd"
        android:dashGap="2dp"
        android:dashWidth="6dp"/>
</shape>
