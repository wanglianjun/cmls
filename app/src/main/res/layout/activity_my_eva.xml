<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mall.selmall.activity.MyEvaActivity">

    <include layout="@layout/layout_title_bg_main" />

    <com.dy.cmls.view.xtablayout.XTabLayout
        android:id="@+id/m_tab"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:xTabBackgroundColor="@color/white"
        app:xTabDisplayNum="2"
        app:xTabDividerColor="#C3C3C3"
        app:xTabDividerWidthWidthText="true"
        app:xTabIndicatorColor="@color/app_main_t"
        app:xTabIndicatorHeight="1dp"
        app:xTabMode="fixed"
        app:xTabSelectedBackgroundColor="@color/system_white"
        app:xTabSelectedTextColor="@color/app_main_t"
        app:xTabSelectedTextSize="15sp"
        app:xTabTextColor="@color/text_black"
        app:xTabTextSelectedBold="false"
        app:xTabTextSize="15sp">

    </com.dy.cmls.view.xtablayout.XTabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/app_bg" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    </android.support.v4.view.ViewPager>
</LinearLayout>
