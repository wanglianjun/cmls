<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg"
    tools:context="com.dy.cmls.mine.activity.MyWalletActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@mipmap/bg_jfqb">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/nav_return" />

            <TextView
                style="@style/text_title_14_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="钱包"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center"
                android:text="明细"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_yue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="138dp"
            android:gravity="center"
            android:text="账户余额（元）"
            android:textColor="#ffcfddff"
            android:textSize="12sp" />
    </FrameLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_rash_des"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:text="可提现金额：0"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="提现金额"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/et_crash"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:hint="请输入提现金额"
                    android:inputType="numberDecimal"
                    android:background="#0000"
                    android:textColorHint="#ffc3c3c3"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="全部提现"
                    android:textColor="@color/app_main"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <View style="@style/view_1dp_gray_heng"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="手续费"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tv_pay_fre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />

            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_bind"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv_bank_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/bg_yhk"
                    android:layout_marginStart="12dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="69dp"
                    android:text="去绑定"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tv_card_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="69dp"
                    android:layout_marginBottom="13dp"
                    android:text="绑定储蓄卡"
                    android:textColor="#ff999999"
                    android:textSize="12sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/btn_right"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"/>
            </FrameLayout>
            <TextView
                android:id="@+id/tv_fre_des"
                android:layout_marginTop="15dp"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说明：手续费为提现金额的0.1%"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_confirm"
                style="@style/app_bt"
                android:layout_marginTop="40dp"
                android:text="确定"/>
            <TextView
                android:id="@+id/tv_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:text="提现记录"
                android:textColor="#ff333333"
                android:textSize="15sp"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
