<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dy.cmls.mstart.ForgetPassActivity">

    <include layout="@layout/layout_title_bg_main" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:text="手机号码"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入手机号码"
            android:textColorHint="#ffc3c3c3"
            android:textColor="@color/text_black"
            android:background="@color/white"
            android:paddingStart="4dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <View style="@style/view_1dp_gray_heng12"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:text="验证码"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="请输入短信验证码"
            android:textColorHint="#ffc3c3c3"
            android:textColor="@color/text_black"
            android:background="@color/white"
            android:paddingStart="4dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="|   获取验证码"
            android:gravity="center"
            android:textColor="#ff3570fe"
            android:textSize="12sp"
            />
    </LinearLayout>
    <View style="@style/view_1dp_gray_heng12"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:text="新密码"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_new_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请设置新的登录密码"
            android:textColorHint="#ffc3c3c3"
            android:textColor="@color/text_black"
            android:background="@color/white"
            android:paddingStart="4dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <View style="@style/view_1dp_gray_heng12"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:text="确认密码"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_confirm_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请再次输入新的登录密码"
            android:textColorHint="#ffc3c3c3"
            android:textColor="@color/text_black"
            android:background="@color/white"
            android:paddingStart="4dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <View style="@style/view_1dp_gray_heng12"/>


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_marginTop="72dp"
        android:text="确定"
        style="@style/app_bt"/>
</LinearLayout>
