<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg"
    tools:context="com.dy.cmls.mall.multimall.activity.SellerInfoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@drawable/bg_seller_info" />

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_return_white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="店铺详情"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                android:src="@mipmap/nav_share"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_seller"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rectangle_white_full_5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_seller_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:riv_corner_radius="5dp"
                android:scaleType="centerCrop"
                app:riv_oval="false"
                android:src="@mipmap/ic_default_small"/>

            <TextView
                android:id="@+id/tv_seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="原色印象"
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_right" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_nav"
                android:layout_width="58dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:corners_radius="10dp"
                app:stroke_color="#FFFEAA50"
                app:stroke_width="0.7dp"
                tools:ignore="MissingPrefix">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/btn_daoh"
                    android:layout_marginEnd="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导航"
                    android:textColor="#FFFEAA50"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <FrameLayout
            android:id="@+id/fl_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        </FrameLayout>
        <ImageView
            android:id="@+id/iv_red_packet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="6dp"
            android:layout_marginTop="115dp"
            android:layout_gravity="end"
            android:src="@mipmap/btn_red"/>
    </FrameLayout>
</LinearLayout>
