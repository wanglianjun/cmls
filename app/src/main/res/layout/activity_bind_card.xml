<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bg_main"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="真实姓名"
                    style="@style/text_title_14_black2"/>

                <TextView
                    android:id="@+id/tvRealName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text=""
                    style="@style/text_title_14_black"/>
            </LinearLayout>

            <View
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                style="@style/view_1dp_gray_heng"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    style="@style/text_title_14_black2"/>

                <TextView
                    android:id="@+id/tvIDCrad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text=""
                    style="@style/text_title_14_black"/>
            </LinearLayout>

            <View
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                style="@style/view_1dp_gray_heng"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="银行卡卡号"
                    style="@style/text_title_14_black2"/>

                <EditText
                    android:id="@+id/etBanksNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入银行卡卡号"
                    android:inputType="number"
                    android:padding="10dp"
                    android:text=""
                    android:textColorHint="@color/text_title3_color"
                    style="@style/text_title_14_black"/>

                <ImageButton
                    android:id="@+id/idebankcard_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_x"
                    android:paddingLeft="10dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <View
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                style="@style/view_1dp_gray_heng"/>
            <LinearLayout
                android:id="@+id/llBankName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="发卡银行"
                    style="@style/text_title_14_black2"/>

                <TextView
                    android:id="@+id/tvBankName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:hint="请选择"
                    android:padding="10dp"
                    android:text=""
                    android:textColorHint="@color/text_title3_color"
                    style="@style/text_title_14_black"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/btn_down"/>
            </LinearLayout>



            <View
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                style="@style/view_1dp_gray_heng"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="手机号码"
                    style="@style/text_title_14_black2"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入银行预留手机号码"
                    android:inputType="number"
                    android:padding="10dp"
                    android:text=""
                    android:textColorHint="@color/text_title3_color"
                    style="@style/text_title_14_black"/>
            </LinearLayout>

            <View
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                style="@style/view_1dp_gray_heng"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="验证码"
                    style="@style/text_title_14_black2"/>

                <EditText
                    android:id="@+id/etCode"
                    style="@style/text_title_12_black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入短信验证码"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:text=""
                    android:textColorHint="@color/text_title3_color" />

                <View
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/app_main"
                    style="@style/view_1dp_gray_shu"/>
                <TextView
                    android:id="@+id/tvGetCode"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="获取验证码"
                    android:textColor="@color/app_main"
                    android:textSize="12sp"/>
            </LinearLayout>

            <View
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                style="@style/view_1dp_gray_heng"/>

            <TextView
                android:id="@+id/tvConfirm"
                android:layout_height="44dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="确定"
                android:background="@drawable/app_bt"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>