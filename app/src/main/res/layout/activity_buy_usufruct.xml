<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dy.cmls.mhome.BuyVipActivity">
    <include layout="@layout/layout_title_bg_main"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="￥"

                android:textColor="@color/text_black"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="330.00"
                android:textColor="@color/text_black"
                android:textSize="26sp"
                />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="购买终身使用权金额"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_des"
            android:layout_marginTop="40dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="说明：成功购买使用权后才能正式激活账号，使用权期限为终身"
            android:textColor="#fffe9d35"
            android:textSize="11sp"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f0f0f0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="请选择支付方式"
                android:textColor="#ff333333"
                android:textSize="15sp"
                />
            <LinearLayout
                android:id="@+id/ll_wx"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="18dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_weixin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    />
                <CheckBox
                    android:id="@+id/cb_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/cb_app"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:checked="true"/>
            </LinearLayout>
            <View style="@style/view_1dp_gray_heng"/>
            <LinearLayout
                android:id="@+id/ll_zfb"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_zhiufbao"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    />
                <CheckBox
                    android:id="@+id/cb_zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/cb_app"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"/>
            </LinearLayout>
            <View style="@style/view_1dp_gray_heng"/>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/app_bt"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="66dp"
                android:layout_marginBottom="16dp"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
