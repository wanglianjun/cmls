<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:text="自营商品"
            android:textColor="#ff333333"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_title_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_vertical"
            android:textColor="#fffe9d35"
            android:textSize="12sp"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_shouhou"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_tuih"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="仅退款"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="退款成功"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="end|center_vertical">
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共1件商品"
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:layout_marginEnd="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:￥"
            android:textColor="#ff333333"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56.20"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />
    </LinearLayout>
    <View style="@style/view_1dp_gray_heng"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="end">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_gravity="center|end"
            app:corners_radius="12dp"
            app:stroke_color="#ff999999"
            app:stroke_width="0.6dp"
            android:layout_marginRight="12dp"
            android:text="取消订单"
            android:textColor="#ff999999"
            android:textSize="12sp"
            tools:ignore="MissingPrefix" />
        <TextView
            android:id="@+id/tv_del"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_gravity="center|end"
            app:corners_radius="12dp"
            app:stroke_color="#ff999999"
            app:stroke_width="0.6dp"
            android:layout_marginRight="12dp"
            android:text="删除订单"
            android:textColor="#ff999999"
            android:textSize="12sp"
            tools:ignore="MissingPrefix" />
        <TextView
            android:id="@+id/tv_shouhou1"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_gravity="center|end"
            app:corners_radius="12dp"
            app:stroke_color="#ff999999"
            app:stroke_width="0.6dp"
            android:layout_marginRight="12dp"
            android:text="申请售后"
            android:textColor="#ff999999"
            android:textSize="12sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_gravity="center|end"
            app:corners_radius="12dp"
            app:stroke_color="#FFFE9D35"
            app:stroke_width="0.6dp"
            android:layout_marginRight="12dp"
            android:text="查看详情"
            android:textColor="#fffe9d35"
            android:textSize="12sp"
            tools:ignore="MissingPrefix" />
        <TextView
            android:id="@+id/tv_fk"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_gravity="center|end"
            app:corners_radius="12dp"
            app:stroke_color="#FFFE9D35"
            app:stroke_width="0.6dp"
            android:layout_marginRight="12dp"
            android:text="马上付款"
            android:textColor="#fffe9d35"
            android:textSize="12sp"
            tools:ignore="MissingPrefix" />
        <TextView
            android:id="@+id/tv_shouhuo"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_gravity="center|end"
            app:corners_radius="12dp"
            app:stroke_color="#FFFE9D35"
            app:stroke_width="0.6dp"
            android:layout_marginRight="12dp"
            android:text="立即收货"
            android:textColor="#fffe9d35"
            android:textSize="12sp"
            tools:ignore="MissingPrefix" />
        <TextView
            android:id="@+id/tv_shouhou"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_gravity="center|end"
            app:corners_radius="12dp"
            app:stroke_color="#FFFE9D35"
            app:stroke_width="0.6dp"
            android:layout_marginRight="12dp"
            android:text="申请售后"
            android:textColor="#fffe9d35"
            android:textSize="12sp"
            tools:ignore="MissingPrefix" />
        <TextView
            android:id="@+id/tv_eva"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_gravity="center|end"
            app:corners_radius="12dp"
            app:stroke_color="#FFFE9D35"
            app:stroke_width="0.6dp"
            android:layout_marginRight="12dp"
            android:text="立即评价"
            android:textColor="#fffe9d35"
            android:textSize="12sp"
            tools:ignore="MissingPrefix" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/app_bg"/>
</LinearLayout>