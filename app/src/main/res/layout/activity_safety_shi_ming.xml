<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.dy.cmls.mine.activity.SafetyShiMingActivity">

    <include layout="@layout/layout_title_bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/text_title_14_black2"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/text_black"
            android:text="真实姓名" />

        <EditText
            android:id="@+id/et_real_name"
            style="@style/text_title_14_black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入真实姓名"
            android:text=""
            android:textColor="@color/text_black"
            android:textColorHint="#ffc3c3c3"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        style="@style/view_1dp_gray_heng"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/text_title_14_black2"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/text_black"
            android:text="身份证号" />

        <EditText
            android:id="@+id/tv_id_crad"
            style="@style/text_title_14_black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入身份证号"
            android:text=""
            android:textColor="@color/text_black"
            android:textColorHint="#ffc3c3c3"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        style="@style/view_1dp_gray_heng"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="101dp">
                <ImageView
                    android:id="@+id/iv_zm"
                    android:layout_width="match_parent"
                    android:layout_height="101dp"
                    android:src="@mipmap/ic_zm" />

                <ImageView
                    android:id="@+id/iv_up_zm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/btn_upload" />
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="108dp"
                android:text="请上传身份证正面"
                android:textColor="#ff333333"
                android:textSize="12sp"
                />
        </FrameLayout>
        <View
            android:layout_width="35dp"
            android:layout_height="20dp"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="101dp">
            <ImageView
                android:id="@+id/iv_fm"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:src="@mipmap/ic_fm" />

            <ImageView
                android:id="@+id/iv_up_fm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/btn_upload" />
        </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="108dp"
                android:text="请上传身份证反面"
                android:textColor="#ff333333"
                android:textSize="12sp"
                />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="101dp">
                <ImageView
                    android:id="@+id/iv_sc"
                    android:layout_width="match_parent"
                    android:layout_height="101dp"
                    android:src="@mipmap/ic_sc" />

                <ImageView
                    android:id="@+id/iv_up_sc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/btn_upload" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="108dp"
                android:text="请上传手持身份证照片"
                android:textColor="#ff333333"
                android:textSize="12sp"
                />
        </FrameLayout>
        <View
            android:layout_width="35dp"
            android:layout_height="20dp"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


        </FrameLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_marginTop="55dp"
        android:text="确定"
        style="@style/app_bt" />
</LinearLayout>
